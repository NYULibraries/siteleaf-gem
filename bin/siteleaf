#!/usr/bin/env ruby

require 'siteleaf'
require 'fileutils'
require 'open-uri'
require 'digest/md5'

require_relative 'commands/commands'

# Select Case for different Siteleaf command
case ARGV[0]
when '-v', '--version', 'version'
  puts Siteleaf::VERSION
when '-h', '--help', 'help'
  puts Help.help
when 's', 'server'
  Commands.sever_command
when 'auth'
  Commands::Execution::Authenticate.auth true
when 'c', 'config', 'setup'
  Commands.config_command
when 'n', 'new'
  Commands.new_command
when 'pull'
  Commands.pull_command
when 'push'
  Commands.push_command
when 'publish'
  Commands.publish_command
else
  puts "`#{ARGV[0]}` command not found.\n"
  puts Help.help
end
